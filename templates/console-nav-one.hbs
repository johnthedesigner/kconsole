<section {{bind-attr class="app.color"}}>
	
	<div id="selected-app">
		
		<!-- List Apps -->
		<div class="select-menu apps-nav">
			<span class="app-icon app-icon-circle">1</span>
			<span>App One</span>
			<ul>
				{{#list-link}}
					{{#link-to 'app.one.index'}}App One{{/link-to}}
				{{/list-link}}
				{{#list-link}}
					{{#link-to 'app.two.index'}}App Two{{/link-to}}
				{{/list-link}}
				<li>{{#link-to 'index'}}My Apps{{/link-to}}</li>
			</ul>
		</div>
		
		<!-- List Environments -->
		<div class="select-menu env-nav">
			<span>Development</span>
			<ul>
				<li class="active"><a href="#">Development</a></li>
				<li><a href="#">Staging</a></li>
				<li><a href="#">Production</a></li>
			</ul>
		</div>
		
	</div>
	
	<!-- List App Config Modules -->
	<ul class="app-config-nav">
			{{#list-link}}
				{{#link-to 'app.one.index' classNames="dashboard"}}Dashboard{{/link-to}}
			{{/list-link}}
			{{#list-link}}
				{{#link-to 'app.one.users' classNames="users"}}Users{{/link-to}}
			{{/list-link}}
			{{#list-link}}
				{{#link-to 'app.one.data' classNames="data"}}Data<span class="add-data"></span>{{/link-to}}
				<ul>
					<li>Data Type 1</li>
					<li>Data Type 2</li>
					<li>Data Type 3</li>
				</ul>
			{{/list-link}}
			{{#list-link}}
				{{#link-to 'app.one.logic' classNames="logic"}}Business Logic{{/link-to}}
			{{/list-link}}
			{{#list-link}}
				{{#link-to 'app.one.files' classNames="files"}}Files{{/link-to}}
			{{/list-link}}
			{{#list-link}}
				{{#link-to 'app.one.push' classNames="push"}}Push{{/link-to}}
			{{/list-link}}
			{{#list-link}}
				{{#link-to 'app.one.branding' classNames="branding"}}Branding{{/link-to}}
			{{/list-link}}
			{{#list-link}}
				{{#link-to 'app.one.analytics' classNames="analytics"}}Analytics{{/link-to}}
			{{/list-link}}
			{{#list-link}}
				{{#link-to 'app.one.console' classNames="console"}}API Console{{/link-to}}
			{{/list-link}}
			{{#list-link}}
				{{#link-to 'app.one.settings' classNames="settings"}}Settings{{/link-to}}
			{{/list-link}}
	</ul>

</section>
